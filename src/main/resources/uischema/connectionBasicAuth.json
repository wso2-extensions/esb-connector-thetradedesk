                                {
                                    "type": "attribute",
                                    "value": {
                                        "name": "password",
                                        "displayName": "Password",
                                        "inputType": "stringOrExpression",
                                        "defaultValue": "",
                                        "required": "true",
                                        "helpTip": "The platform password of the user requesting the token."
                                    }
                                },
                                {
                                    "type": "attribute",
                                    "value": {
                                        "name": "tokenExpirationInMinutes",
                                        "displayName": "Token Expiration In Minutes",
