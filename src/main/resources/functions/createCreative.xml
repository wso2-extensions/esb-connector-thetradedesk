<template xmlns="http://ws.apache.org/ns/synapse" name="createCreative">
    <!-- Request Body Parameter List -->
    <parameter name="advertiserId"
               description="The platform ID of the advertiser that owns this creative. Type: string"/>
    <parameter name="creativeName"
               description="The name of the creative. The value must not contain special characters like &lt;&gt;;^\r\n. Max length is 256. Type: string"/>
    <parameter name="availability"
               description="Indicates if the Creative is &apos;Available&apos; for use or &apos;Archived&apos;. &apos;Archived&apos; creatives are hidden and associations removed. Type: string"/>
    <parameter name="description"
               description="An optional description of the creative. Max length is 512. Type: string"/>
    <parameter name="clickthroughUrl"
               description="The URL to invoke when the user clicks the ad. This may include click tracking. Max length is 5000. Type: string"/>
    <sequence>
        <class name="org.wso2.carbon.theTradeDeskConnector.RestURLBuilder">
            <property name="operationPath" value="/creative"/>
        </class>
        <payloadFactory media-type="json" template-type="freemarker">
            <format>
                <![CDATA[{
                                                                                        <#if (args.arg1)?has_content>
                                    "AdvertiserId": "${args.arg1}",                                </#if>
                                                                                            <#if (args.arg2)?has_content>
                                    "CreativeName": "${args.arg2}",                                </#if>
                                                                                            <#if (args.arg3)?has_content>
                                    "Availability": "${args.arg3}",                                </#if>
                                                                                            <#if (args.arg4)?has_content>
                                    "Description": "${args.arg4}",                                </#if>
                                                                                            <#if (args.arg5)?has_content>
                                    "ClickthroughUrl": "${args.arg5}"                                </#if>
                                                                                        }]]>
            </format>
            <args>
                <arg evaluator="xml" expression="$func:advertiserId"/>
                <arg evaluator="xml" expression="$func:creativeName"/>
                <arg evaluator="xml" expression="$func:availability"/>
                <arg evaluator="xml" expression="$func:description"/>
                <arg evaluator="xml" expression="$func:clickthroughUrl"/>
            </args>
        </payloadFactory>
        <property name="DISABLE_CHUNKING" scope="axis2" type="STRING" value="true"/>
        <property name="messageType" value="application/json" scope="axis2"/>
        <property name="ContentType" value="application/json" scope="axis2"/>
        <header name="Accept" value="application/json" scope="transport" action="set"/>
        <header name="TTD-Auth" expression="get-property('_TTD_AUTH_HEADER_')" scope="transport" action="set"/>
        <call>
            <endpoint>
                <http method="POST" uri-template="{uri.var.base}{+uri.var.urlPath}{+uri.var.urlQuery}"/>
            </endpoint>
        </call>
    </sequence>
</template>
